<PersonCard Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text); margin-bottom:0px!important" />
<MudNavMenu>
    <!-- START -->
    <MudText Typo="Typo.subtitle2" Color="Color.Surface" Class="ml-4 my-3">Start</MudText>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    @if (_canViewAuditTrails)
    {
        <MudNavLink Match="NavLinkMatch.Prefix" Href="/identity/audit-trail" Icon="@Icons.Material.Filled.History">Audit Trail</MudNavLink>
    }

    <!-- WORKSPACE -->
    <MudText Typo="Typo.subtitle2" Color="Color.Surface" Class="ml-4 my-3">Workspace</MudText>
    <MudNavLink Href="/workspace/kanban" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ViewKanban">Kanban</MudNavLink>
    <MudNavLink Href="/workspace/chat" Icon="@Icons.Material.Filled.ChatBubble" Class="imediatus-nav-child">Chat</MudNavLink>

    @if (CanViewAdministrationGroup)
    {
        <MudText Typo="Typo.subtitle2" Color="Color.Surface" Class="ml-4 my-3">Administration</MudText>

        <!-- CONNECTIONS -->
        <MudNavGroup Title="Connections" Icon="@Icons.Material.Filled.Hub">
            <MudNavLink Href="/connections/databases" Icon="@Icons.Material.Filled.Storage">Databases</MudNavLink>
            <MudNavLink Href="/connections/storages" Icon="@Icons.Material.Filled.CloudQueue">Storages</MudNavLink>
            <MudNavLink Href="/connections/openai" Icon="@Icons.Material.Filled.AutoAwesome">OpenAI API</MudNavLink>
        </MudNavGroup>

        <!-- ORCHESTRATOR -->
        <MudNavGroup Title="Orchestrator" Icon="@Icons.Material.Filled.AccountTree">
            <MudNavLink Href="/orchestrator/domains" Icon="@Icons.Material.Filled.Domain">Domains</MudNavLink>
            <MudNavLink Href="/orchestrator/agents" Icon="@Icons.Material.Filled.SupportAgent">Agents</MudNavLink>
            <MudNavLink Href="/orchestrator/contexts" Icon="@Icons.Material.Filled.Layers">Contexts</MudNavLink>
        </MudNavGroup>

        <!-- USERS / ROLES / TENANTS -->
        @if (_canViewUsers)
        {
            <MudNavLink Match="NavLinkMatch.Prefix" Href="/identity/users" Icon="@Icons.Material.Filled.People">Users</MudNavLink>
        }
        @if (_canViewRoles)
        {
            <MudNavLink Href="/identity/roles" Icon="@Icons.Material.Filled.AdminPanelSettings">Roles</MudNavLink>
        }
        @if (_canViewTenants)
        {
            <MudNavLink Href="/tenants" Icon="@Icons.Material.Filled.Apartment" Disabled="!_canViewTenants">Tenants</MudNavLink>
        }
    }
</MudNavMenu>